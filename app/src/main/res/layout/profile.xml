<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pantallas.registro.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:id="@+id/padre">

        <RelativeLayout
            android:id="@+id/hijo1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="#33E9FF"
            >

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="AtrÃ¡s"></Button>

                <Button
                    android:id="@+id/friends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="Amigos" />

            </FrameLayout>

        </RelativeLayout>
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hijo1">

            <RelativeLayout
                android:id="@+id/hijo2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@id/hijo1">

                <RelativeLayout
                    android:id="@+id/hijo21"
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        tools:srcCompat="@drawable/perfil" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/hijo22"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@id/hijo21"
                    android:padding="30dp">

                    <TextView
                        android:id="@+id/nikname"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Nombre" />


                    <TextView
                        android:id="@+id/level"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/nikname"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Nivel">

                    </TextView>
                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/level"
                        android:background="?android:attr/listDivider" />

                    <TextView
                        android:id="@+id/logros"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/divider"
                        android:gravity="center"
                        android:padding="20dp"
                        android:text="Logros" />

                    <!--
                    El ImageView de abajo debe ser un array de imagenes.(logros)
                    Lo pongo para que se entienda pero no tengo niidea de como hacerlo
                    -->
                    <GridLayout
                        android:id="@+id/mislogros"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/logros"
                        android:layout_marginTop="20dp"
                        android:columnCount="3"
                        android:orientation="horizontal"
                        android:padding="14dp">
                    </GridLayout>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
